{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}